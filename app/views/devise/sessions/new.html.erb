<div>
  <div class="c-app c-dark-theme flex-row align-items-center">
    <div class="container">
      <div class="justify-content-center row">
        <div class="col-md-8">
          <div class="card-group">
            <div class="p-4 card">
              <div class="card-body">
                <% if resource_name.to_s == "professor" %>
                  <span style="color: #1cdaae">Panel de Profesores</span>
                <% elsif resource_name.to_s == "student" %>
                  <span style="color: #1cdaae">Panel de Alumnos</span>
                <% elsif resource_name.to_s == "admin" %>
                  <span style="color: #1cdaae">Panel Administrativo</span>
                <% end %>
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <h1>Iniciar Sesion</h1>
                  <p class="text-muted">Ingrese sus credenciales</p>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <div class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                         class="c-icon" role="img">
                        <path fill="var(--ci-primary-color, currentColor)"
                              d="M411.6,343.656l-72.823-47.334,27.455-50.334A80.23,80.23,0,0,0,376,207.681V128a112,112,0,0,0-224,0v79.681a80.236,80.236,0,0,0,9.768,38.308l27.455,50.333L116.4,343.656A79.725,79.725,0,0,0,80,410.732V496H448V410.732A79.727,79.727,0,0,0,411.6,343.656ZM416,464H112V410.732a47.836,47.836,0,0,1,21.841-40.246l97.66-63.479-41.64-76.341A48.146,48.146,0,0,1,184,207.681V128a80,80,0,0,1,160,0v79.681a48.146,48.146,0,0,1-5.861,22.985L296.5,307.007l97.662,63.479h0A47.836,47.836,0,0,1,416,410.732Z"
                              class="ci-primary"></path>
                      </svg></div>
                    </div>
                    <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "DNI o email o codigo" %>
                  </div>
                  <div class="input-group mb-4">
                    <div class="input-group-prepend">
                      <div class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                         class="c-icon" role="img">
                        <path fill="var(--ci-primary-color, currentColor)"
                              d="M384,200V144a128,128,0,0,0-256,0v56H88V328c0,92.635,75.364,168,168,168s168-75.365,168-168V200ZM160,144a96,96,0,0,1,192,0v56H160ZM392,328c0,74.99-61.01,136-136,136s-136-61.01-136-136V232H392Z"
                              class="ci-primary"></path>
                      </svg></div>
                    </div>
                    <%= f.password_field :password, class: "form-control", placeholder: "Contraseña", autocomplete: "current-password" %>
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <%= f.submit "Ingresar", class: "px-4 btn btn-primary" %>
                    </div>
                    <div class="text-right col-6">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="text-white bg-primary py-5 d-md-down-none card" style="width: 44%;">
              <div class="text-center card-body">
                <div>
                  <h2>MAGNA</h2>
                  <p class="text_dark">Institución de Especialización Profesional, sistema desarrollado por la Agencia MAKI.</p>
                  <a href="http://agenciamaki.com/" target="_blank">
                    <button class="mt-3 btn btn-primary" type="button" tabindex="-1">IR A AGENCIAMAKI.COM</button>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>